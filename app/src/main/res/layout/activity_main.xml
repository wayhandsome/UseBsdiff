<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jfeng.usebsdiff.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="旧APK所在目录:"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/etoldapkdirectory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请指定旧APK所在目录"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="待发布APK完整路径:"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/etnewapk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请指定待发布APK文件完整路径"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="待生成差异包所在目录:"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tvpatchdirectory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="开始生成差异包"
        android:onClick="generatePatch"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvdifflog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
